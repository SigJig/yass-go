
varassign: vardef | varaug
vardef: IDENTIFIER "=" expr
varaug: IDENTIFIER augassign expr

augassign: "+="|"-="|"*="|"/="|"**="|"%="

hexnum: /0x[0-9a-fA-F]+/
decnum: /\.[0-9]+|\b(?:[0-9]+(?:(?:\.[0-9]+)?[eE][-+]?[0-9]+)?)\b/

string: /(?:[^"\\]|[\\](?:[\\]{2})*[^\"])*/

IDENTIFIER: /[a-zA-Z_]\w*/

expr: atom
bool: "true" | "false"

comment: COMMENT_SL | COMMENT_ML
COMMENT_SL: /\/\/[^\n]*\n/
COMMENT_ML: /\/\*(?:[^\*]|\*[^\/])*(?:\*\/|$)/

WHITESPACE: /\s+/